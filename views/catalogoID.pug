html(lang="pt-PT")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        link(rel="stylesheet", href="/css/produtosEdit.css")
        link(rel="stylesheet", href="/css/common.css")
        link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0')
        link(rel='stylesheet', type='text/css', href='https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css')
    body
        .modal#modalCores
            .modal-container.container-sm
                span#modal-fechar.material-symbols-outlined
                    | close
                strong Modificar cores
                form(action="/api/produto/mudarcor", method="POST")#modal-form
                    button Salvar 
        .carregando
            .spinner-border.text-light(role='status')
                span.visually-hidden Carregando...
        .container-xl
            h1#nomeDoCatalogo catalogo
            .adicionar
                form(action="/api/produto", method="POST", enctype='multipart/form-data')#formPrincipal
                    .row
                        .col.input-group.mb-3.form-principal-input
                            input.form-control(type='text', name='ref',placeholder='Referência do produto',  required)
                            span Referência
                        .col.input-group.mb-3.form-principal-input
                            input.form-control#precoInput(type='number',placeholder='Preço do produto ex.: 25,50' , name='preco', min='0.00', max='1000000.00', step='0.01', required)
                            span Preço
                    .input-group.mb-3.row.g-0#tabelaCores
                        .col.cores#cores1
                            input.form-control.refCorInput(type='text', placeholder="Referência da cor", required, maxlength="20")
                            span.input-group-text COR
                            input.form-control.corInput(type='color', value="#ffffff")
                        .col.cores
                            input.form-control.refCorInput(type='text', placeholder="Ex: Preto", required, maxlength="20")
                            span.input-group-text COR
                            input.form-control.corInput(type='color', value="#000000")
                        .col.cores
                            input.form-control.refCorInput(type='text', placeholder="Ex: Vermelho", required, maxlength="20")
                            span.input-group-text COR
                            input.form-control.corInput(type='color', value="#ff0000")
                        .col-sm-2#atrasCores
                            button.fs-1.h-50.w-100.sm.btn.btn-primary#addCor(type='button') + 
                            button.fs-1.h-50.w-100.sm.btn.btn-danger#removedorCor(type='button', onclick='removeCor()') -
                    .input-group.mb-3
                        span.input-group-text Tamanhos
                        input.form-control.tamanhos(type='text', value="PP", required, style="text-transform:uppercase", maxlength="20")
                        input.form-control.tamanhos(type='text', value="P", required, style="text-transform:uppercase", maxlength="20")
                        input.form-control.tamanhos(type='text', value="M", required, style="text-transform:uppercase", maxlength="20")
                        input.form-control.tamanhos(type='text', value="G", required, style="text-transform:uppercase", maxlength="20")
                        input.form-control#valorTamanhos(type='hidden', name="tamanhos")
                        button.btn.btn-danger#removedor(type='button', onclick='removeInput()') -
                        button.btn.btn-primary(type='button', onclick='addInput()') +
                    input.form-control(type='hidden', name="catalogo", value=id)
                    input.form-control#valorCores(type='hidden', name="cores")
                    .input-image-form-container
                        label(for="image-input").input-image-form
                            input(type='file', name="imagem", accept='image/png, image/jpeg, image/pjepeg', required, multiple = false, id='image-input')
                            span#image-text-form Imagem
                            #image-holder
                    .d-md-flex.justify-content-md-end
                        button.btn.btn-primary.me-md-2(type='submit') Adicionar
                            span.material-symbols-outlined
                                add
        .container-fluid.container-produtos
            .produtos.row.justify-content-md-center.row-cols-1.row-cols-sm-2.row-cols-md-4
        script.
            var emailPayload = '!{email}'
            var IDPayload = '!{id}'
        script(src='https://code.jquery.com/jquery-1.9.1.js')
        script(type='text/javascript', src='https://cdn.jsdelivr.net/npm/toastify-js')
        script(src="/js/catalogoID.js")
        script(src="/js/resizeInput.js")